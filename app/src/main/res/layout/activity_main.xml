<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <Button
        android:id="@+id/btnShowSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Seek Bar"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="50dp"
        android:background="@android:color/holo_green_light"
        android:onClick="goToSeekBarActivity"
        />
    <Button
        android:id="@+id/btnShowRatingBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Rating Bar"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_green_light"
        android:onClick="goToRatingBarActivity"
        />
    <Button
        android:id="@+id/btnShowTextClock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Text Clock"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_green_light"
        android:onClick="goToTextClockActivity"
        />
    <Button
        android:id="@+id/btnShowSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Switch"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_green_light"
        android:onClick="goToSwitchActivity"
        />
    <Button
        android:id="@+id/btnShowAlertDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_green_light"
        android:text="Show Alert Dialog"
        android:onClick="goToAlertDialogActivity"
        />
</LinearLayout>